<%= search_form_for @q, url: search_plans_path, class:"flex flex-col items-center py-8" do |f| %>

    <div class="form-control w-full max-w-xs mb-2">
      <label class="label">
        <span class="label-text font-semibold text-base">出発地</span>
      </label>
      <%= f.collection_select(:departure_id_eq, Prefecture.all, :id, :name,{prompt: ""},{class:"input input-bordered w-full max-w-xs"})%>
    </div>

    <div class="form-control w-full max-w-xs mb-2">
      <label class="label">
        <span class="label-text font-semibold text-base">目的地</span>
      </label>
      <%= f.collection_select(:destination_id_eq, Prefecture.all, :id, :name,{prompt: ""}, {class:"input input-bordered w-full max-w-xs"}) %>
    </div>

    <div class="form-control w-full max-w-xs mb-2">
    <label class="label">
      <span class="label-text font-semibold text-base">タグ</span>
    </label>
      <%= f.text_field :tags_tag_name_cont, autofocus: true, class:"input input-bordered w-full"%>
    </div>

    <div class="form-control w-full max-w-xs mb-2">
    <label class="label">
      <span class="label-text font-semibold text-base">キーワード</span>
    </label>
      <%= f.text_field :title_eq, autofocus: true, class:"input input-bordered w-full"%>
    </div>

    <div class="actions mt-4 text-center">
      <%= f.submit "日程検索", class:"btn btn-primary" %>
    </div>
<% end %>

<% if @plans.present? %>
  <div class="flex">
    <% @plans.each do |plan| %>
      <div class="flex">
        <%= link_to plan_path(plan) do %>
          <div class="card max-w-sm bg-base-100 shadow-xl">
            <div class="relative">
              <figure>
                <%= image_tag(plan.cover_image,class:"h-80 w-full object-cover")%>
              </figure>
            </div>
            <div class="card-body">
              <h3 class="card-title">
                <%= plan.title %>
              </h3>
              <p class="flex h-12 items-center">
                <span class="block text-sm flex">
                  <span class="badge badge-primary text-gray-100"><%= Prefecture.find(plan.departure_id).name %></span>
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                    <path fill-rule="evenodd" d="M10.21 14.77a.75.75 0 01.02-1.06L14.168 10 10.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                    <path fill-rule="evenodd" d="M4.21 14.77a.75.75 0 01.02-1.06L8.168 10 4.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                  </svg>
                  <span class="badge badge-accent text-gray-100"><%= Prefecture.find(plan.destination_id).name%></span>
                </span>
              </p>
              <div class="card-actions justify-end">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 text-red-500">
                  <path d="M9.653 16.915l-.005-.003-.019-.01a20.759 20.759 0 01-1.162-.682 22.045 22.045 0 01-2.582-1.9C4.045 12.733 2 10.352 2 7.5a4.5 4.5 0 018-2.828A4.5 4.5 0 0118 7.5c0 2.852-2.044 5.233-3.885 6.82a22.049 22.049 0 01-3.744 2.582l-.019.01-.005.003h-.002a.739.739 0 01-.69.001l-.002-.001z" />
                </svg>
              </div>
            </div>
          </div>
        <% end %>
    <% end %>
  </div>
<% else %>
  <p>条件に一致する日程はありません</p>
<% end %>