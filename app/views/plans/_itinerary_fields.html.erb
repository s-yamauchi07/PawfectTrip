<div class="nested-fields border p-4 mb-4 artboard artboard-horizontal phone-1">
  <h2 class="text-xl">行程入力</h2>

  <div class="flex justify-between">
    <%= f.datetime_field :date, class:"input input-bordered w-6/12 input-sm max-w-xs mr-2"%>
    <%= f.text_field :place, placeholder:"スポット名(例:東京駅)",class:"input input-bordered w-6/12 input-sm max-w-xs block" %>
  </div>

  <%= f.text_area :memo, placeholder:"メモ(例:乗り換え5分)",class:"textarea textarea-bordered w-full mt-4" %>

  <h3>移動手段</h3>
  <div class="flex">
    <%= f.collection_radio_buttons(:transportation_id, Transportation.all, :id, :name) do |b| %>
      <% transportation = Transportation.find(b.value) %>
        <label class="block text-center p-2" data-controller="add-button">
  
            <div
              class ="rounded-full border border-blue-300 p-2"
              data-action="click->add-button#click">
                <%= image_tag transportation.image, class:"w-8" %>
            </div>
            <%= b.radio_button(class: "hidden") %>
            <%= b.label class:"text-xs"%>
        </label>
    <% end %>
  </div>

  <div  class="text-right" >
    <%= link_to_remove_association '削除', f, class:"btn btn-xs"%>
  </div>

</div>