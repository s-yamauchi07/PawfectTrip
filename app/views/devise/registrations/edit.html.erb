<section class="overflow-hidden h-full">
    <div class="flex min- overflow-hidden h-full">
        <div class="relative flex-1 hidden w-0 overflow-hidden lg:block">
            <%= image_tag "edit_prof.png", class:"absolute inset-0 object-cover w-full h-full bg-black"%>
        </div>
        <div class="flex flex-col justify-center flex-1 px-4 py-12 bg-base-200 overflow-hidden sm:px-6 lg:flex-none lg:px-20 xl:px-24">
            <div class="w-full max-w-xl mx-auto lg:w-96">
                <div>
                    <h2 class="mt-6 text-3xl font-extrabold text-neutral-600">ユーザー編集</h2>
                </div>

                <div class="mt-8">
                    <div class="mt-6">
                        <%= form_with model: @user,  url: user_registration_path, data: {turbo_method: :put },local: true do |f| %>
                          <%= render "devise/shared/error_messages", resource: @user %>
                          <div class="form-control w-full mb-4">
                            <label class="label">
                              <span class="label-text">ニックネーム</span>
                              <span class="label-text-alt">必須</span>
                            </label>
                            <%= f.text_field :nickname, autofocus: true, placeholder:"nickname",class:"input input-bordered w-full"%>
                          </div>

                          <div class="form-control w-full mb-4">
                            <label class="label">
                              <span class="label-text">Email</span>
                              <span class="label-text-alt">必須</span>
                            </label>
                            <%= f.email_field :email, autofocus: true, placeholder:"test@test.com",class:"input input-bordered w-full"%>
                          </div>

                          <div class="form-control w-full mb-4">
                            <label class="label">
                              <span class="label-text">パスワード</span>
                              <span class="label-text-alt">必須</span>
                            </label>
                            <%= f.password_field :password, autofocus: true, placeholder:"半角英数字で入力",class:"input input-bordered w-ful"%>
                          </div>

                          <div class="form-control w-full mb-4">
                            <label class="label">
                              <span class="label-text">Password_confirmation</span>
                              <span class="label-text-alt">必須</span>
                            </label>
                            <%= f.password_field :password_confirmation, autofocus: true, placeholder:"半角英数字で入力",class:"input input-bordered w-full"%>
                          </div>

                          <div class="flex items-center justify-between">
                              <div class="flex items-center">
                                  <input id="remember-me" name="remember-me" type="checkbox" placeholder="Your password" class="w-4 h-4 text-blue-600 border-gray-200 rounded focus:ring-blue-500">
                                  <label for="remember-me" class="block ml-2 text-sm text-neutral-600"> Remember me </label>
                              </div>
                          </div>

                          <div>
                            <button class="flex items-center justify-center w-full px-10 py-4 text-base font-medium text-center text-white transition duration-500 ease-in-out transform bg-cyan-600 rounded-xl hover:bg-cyan-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-500">
                              <%= f.submit "Next"%>
                            </button>  
                          </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>