<div class="container flex items-center justify-center h-screen">

  <p class="notice"><%= notice %></p>
  <p><%= alert %></p>

  <div class="card bg-blue-50 m-auto p-6 shadow-xl">
    <h2 class="mb-6 text-2xl">Log in</h2>
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>

      <div class="form-control w-full max-w-xs">
        <label class="label">
          <span class="label-text">Email</span>
          <span class="label-text-alt">必須</span>
        </label>
        <%= f.email_field :email, autofocus: true, placeholder:"test@test.com",class:"input input-bordered w-full max-w-xs"%>
      </div>

      <div class="form-control w-full max-w-xs">
        <label class="label">
          <span class="label-text">Password</span>
          <span class="label-text-alt">必須</span>
        </label>
        <%= f.password_field :password, autofocus: true, placeholder:"password",class:"input input-bordered w-full max-w-xs"%>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mt-4">
        <%= f.submit "LogIn", class:"btn btn-accent" %>
      </div>

      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>