<% include_gon %>
<section class="text-gray-600 body-font overflow-hidden">
  <div class="container px-5 py-24 mx-auto">
    <div class="lg:w-4/5 mx-auto flex flex-wrap">
      <img alt="hotel_image" class="lg:w-1/2 w-full lg:h-auto h-64 object-cover object-center rounded" src="<%= @hotel_info["hotelImageUrl"] %>">
      <div class="lg:w-1/2 w-full lg:pl-10 lg:py-6 mt-6 lg:mt-0">
        <h2 class="text-sm title-font text-gray-500 tracking-widest"><%= @hotel_info["hotelKanaName"]%></h2>
        <h1 class="text-gray-900 text-3xl title-font font-medium mb-1"><%= @hotel_info["hotelName"] %></h1>
        <div class="flex mb-4">
          <span class="flex items-center">
            <svg fill="currentColor" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 text-yellow-500" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
            </svg>
            <span class="text-gray-600 ml-3"><%= @hotel_info["reviewAverage"]%></span>
          </span>
          <span class="flex ml-3 pl-3 py-2 border-l-2 border-gray-200 space-x-2s"><%= @hotel_info["reviewCount"]%>レビュー</span>
        </div>

        <p class="leading-relaxed mb-4"><%= @hotel_info["hotelSpecial"]%></p>
        
        <span class="title-font font-medium text-2xl text-gray-900">最安値 ¥<%= @hotel_info["hotelMinCharge"]%>/人</span>
        <div class="flex justify-end">
          <% if user_signed_in? %>
            <!--いいねボタン-->
              <%= render partial: 'like', locals: {hotel_num: @hotel_num, hotel_record: @hotel_record} %>
            <!-- いいねボタン-->
          <% end %>
          <button class="flex ml-4 text-white bg-blue-500 border-0 py-2 px-6 focus:outline-none hover:bg-blue-600 rounded">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12.75 15l3-3m0 0l-3-3m3 3h-7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <%= link_to 'もっと見る', @hotel_info["hotelInformationUrl"], target: :_blank, rel: "noopener noreferrer" %>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>


