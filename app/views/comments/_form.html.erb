<div id="new_comment">
  <%= form_with model:[plan, comment],local:true, remote: true do |f|%>
    <%= render "shared/error_messages", resource: f.object %>
    <%= f.text_field :comment, class:"input input-bordered" %>
    <%= f.submit "投稿", id: "comment-btn",class:"btn btn-primary" %>
  <% end %>
</div>