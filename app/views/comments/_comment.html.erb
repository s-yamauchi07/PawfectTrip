<%= turbo_frame_tag dom_id(comment) do %>
  <div class="comment">
    <div class="chat chat-start">
      <div class="chat-header">
        <%= comment.user.nickname %>
        <time class="text-xs opacity-50"><%= l comment.created_at %></time>
      </div>
      <div class="chat-bubble"><%= comment.comment %></div>
    </div>
  </div>
<% end %>
